<!DOCTYPE html>
<html>
<head>
	<title>Forest Finder!</title>
	<link rel="stylesheet" href="/imports/bootstrap.min.css">
	<link rel="stylesheet" href="/imports/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/style.css">
	<script src="/imports/jquery.min.js"></script>
	<script src="/imports/bootstrap.min.js"></script>
</head>
<body>

<div class="navbar navbar-default">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#forestNavBar" aria-expanded="false">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		      <a class="navbar-brand" href="/forests">Forest Finder</a>
		</div>

		<div class="collapse navbar-collapse" id="forestNavBar">
      		<ul class="nav navbar-nav">
        		<li><a href="/forests/new"><i class="fa fa-plus" aria-hidden="true"></i> Add Forest</a></li>
        	</ul>
        	<ul class="nav navbar-nav navbar-right">
				<% if (typeof(user) === "undefined") { %>
        			<li><a href="/login"><i class="fa fa-sign-in" aria-hidden="true"></i> Login</a></li>
        			<li><a href="/register"><i class="fa fa-user-plus" aria-hidden="true"></i> Sign Up</a></li>
				<% } else { %>
					<li><a href="/users/<%=user.aUsername%>">Signed In As <%=user.aUsername%></a></li>
        			<li><a href="/logout"><i class="fa fa-sign-out" aria-hidden="true"></i> Logout</a></li>
				<% } %>
        	</ul>
        </div>
	</div>
</div>


<% if(error && error.length > 0){ %>
<div class="container"><div class="alert alert-danger"><%= error %></div></div>
<% } %>

<% if(success && success.length > 0){ %>
<div class="container"><div class="alert alert-success"><%= success %></div></div>
<% } %>
