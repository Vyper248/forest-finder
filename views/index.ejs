<% include partials/header %>

<div class="container">
	<header class="jumbotron">
		<h1>Welcome to Forest Finder!</h1>
		<p>View our hand-picked forests from all over the world</p>
		<a href="/forests/new" class="btn btn-primary">Add New Forest</a>
	</header>
</div>

<div class="container">
	<div class="row">
	<% for (var i = 0; i < forests.length; i++) { %>
		<div class="col-md-6 col-lg-4">
			<a href="/forests/<%= forests[i]._id %>">
				<div class="thumbnail">
					<h4 class="forestName"><%= forests[i].name %></h4>
					<div style="background-image:url('<%= forests[i].image %>');" class="image"></div>
				</div>
			</a>
		</div>
	<% } %>
	</div>
</div>

<% include partials/footer %>
